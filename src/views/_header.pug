header.header
  nav.nav.nav--tours
    a.nav__el(href="/overview") All tours
    form.nav__search
      button.nav__search-btn
        svg
          use(xlink:href="/img/icons.svg#icon-search")
      input.nav__search-input(type="text" placeholder="Search tours")
  .header__logo
    img(src="/img/logo-white.png" alt="Natours logo")
  nav.nav.nav--user
    if user
      a.nav__el(href="/bookings") My bookings
      a.nav__el.nav__el--logout Sign out
      a.nav__el(href="/account/me")
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name}`)
        span #{user.name.split(' ')[0]}
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='/signup') Sign up